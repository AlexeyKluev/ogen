{{- range $t := $.Types }}
{{ if $t.IsStruct }}
// WriteJSON implements json.Marshaler.
func (s {{ $t.Name }}) WriteJSON(j *json.Stream) {
    j.WriteObjectStart()
    more := json.NewMore(j)
    defer more.Reset()
    {{- range $f := $t.JSON.Fields }}
        {{ template "enc_json" field_elem $f -}}
    {{- end }}
    j.WriteObjectEnd()
}

// ReadJSON reads {{ $t.Name }} from json stream.
func (s *{{ $t.Name }}) ReadJSON(i *json.Iter) error {
    if s == nil {
        return fmt.Errorf(`invalid: unable to decode {{ $t.Name }} to nil`)
    }
    return i.ObjectBytes(func(i *json.Iter, k []byte) error {
        switch string(k) {
    {{- range $f := $t.JSON.Fields }}
    case "{{ $f.Tag.JSON }}":
        {{- template "dec_json" field_elem $f }}
    {{- end }}
        default:
            return i.Skip()
        }
        return nil
    })
}
{{- else if $t.IsGeneric }}
{{ $g := $t.GenericOf }}
{{ $v := $t.GenericVariant }}
// WriteJSON writes json value of {{ $g.Go }} to json stream.
func (o {{ $t.Name }}) WriteJSON(j *json.Stream{{ if $g.Format }}, format func(*json.Stream, {{ $g.Go }}){{ end }}) {
{{- if $v.Nullable }}
    if o.Null {
        j.WriteNil()
        return
    }
{{- end }}
{{- if $g.Format }}
    format(j, o.Value)
{{- else if $g.JSON.Format }}
    json.Write{{ $g.JSON.Format }}(j, o.Value)
{{- else if $g.JSON.Write }}
    j.{{ $g.JSON.Write }}({{ $g.Primitive }}(o.Value))
{{- else if $g.IsStruct }}
    o.Value.WriteJSON(j)
{{- end }}
}

// ReadJSON reads json value of {{ $g.Go }} from json iterator.
func (o *{{ $t.Name }}) ReadJSON(i *json.Iter{{ if $g.Format }}, format func(*json.Iter) ({{ $g.Go }}, error){{ end }}) error {
    if o == nil {
        return fmt.Errorf(`invalid: unable to decode {{ $t.Name }} to nil`)
    }
    switch i.Next() {
    case json.{{ $g.JSON.Type }}:
    {{- if $v.Optional }}
        o.Set = true
    {{- end }}
    {{- if $v.Nullable }}
        o.Null = false
    {{- end }}
    {{- if $g.Format }}
        v, err := format(i)
        if err != nil {
            return err
        }
        o.Value = v
    {{- else if $g.JSON.Format }}
        v, err := json.Read{{ $g.JSON.Format }}(i)
        if err != nil {
            return err
        }
        o.Value = v
    {{- else if $g.JSON.Read }}
        v, err := i.{{ $g.JSON.Read }}()
        if err != nil {
            return err
        }
        o.Value = {{ $g.Go }}(v)
    {{- else if $g.IsStruct }}
        if err := o.Value.ReadJSON(i); err != nil {
            return err
        }
    {{- end }}
        return nil
    {{- if $v.Nullable }}
    case json.Nil:
        if err := i.Null(); err != nil {
            return err
        }
        var v {{ $g.Go }}
        o.Value = v
        {{- if $v.Optional }}
        o.Set = true
        {{- end }}
        o.Null = true
        return nil
    {{- end }}
    default:
        return fmt.Errorf("unexpected type %q while reading {{ $t.Name }}", i.Next())
    }
}
{{- else if $t.IsEnum }}
// WriteJSON implements json.Marshaler.
func (s {{ $t.Name }}) WriteJSON(j *json.Stream) {
    j.{{ $t.JSON.Write }}({{ $t.Primitive }}(s))
}

// ReadJSON reads {{ $t.Name }} from json stream.
func (s *{{ $t.Name }}) ReadJSON(i *json.Iter) error {
    if s == nil {
        return fmt.Errorf(`invalid: unable to decode {{ $t.Name }} to nil`)
    }
    v, err := i.{{ $t.JSON.Read }}()
    if err != nil {
        return err
    }
    *s = {{ $t.Name }}(v)
    return nil
}
{{- else if $t.IsAlias }}
func ({{ $t.Name }}) WriteJSON(j *json.Stream) {}
func ({{ $t.Name }}) ReadJSON(i *json.Iter) error { return nil }
{{- else if $t.IsSum }}
// WriteJSON implements json.Marshaler.
func (s {{ $t.Name }}) WriteJSON(j *json.Stream) {
    switch s.Type {
    {{- range $s := $t.SumOf }}
    case {{ $s.Name }}{{ $t.Name }}:
        {{- template "enc_json" sum_elem $s -}}
    {{- end }}
    }
}

// ReadJSON reads value from json stream.
func (s *{{ $t.Name }}) ReadJSON(i *json.Iter) error {
    if s == nil {
        return fmt.Errorf(`invalid: unable to decode {{ $t.Name }} to nil`)
    }
    switch t := i.Next(); t {
    {{- range $s := $t.SumOf }}
    case json.{{ $s.JSON.Type }}:
        {{- template "dec_json" sum_elem $s }}
        s.Type = {{ $s.Name }}{{ $t.Name }}
    {{- end }}
    default:
        return fmt.Errorf("unexpected json type %q", t)
    }
    return nil
}
