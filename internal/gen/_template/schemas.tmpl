{{- /*gotype: github.com/ogen-go/ogen/internal/gen.TemplateConfig*/ -}}

{{ define "schemas" }}
{{ $pkg := $.Package }}
{{ template "header" $ }}

{{- range $name, $s := $.Schemas }}
{{/* Define struct */}}
{{- if eq $s.Kind "struct" }}
type {{ $name }} struct {
{{- range $f := $s.Fields }}
    {{ $f.Name }} {{ $f.Type }} `json:"{{ $f.Tag }}"`
{{- end }}
}
{{/* Define struct */}}

{{/* Define alias */}}
{{- else if eq $s.Kind "alias" }}
type {{ $name }} {{ $s.AliasTo.Type }}
{{/* Define alias */}}

{{- end }}

{{/* Define methods */}}
{{- range $method := $s.Methods }}
func (*{{ $name}}) {{ $method }}() {}
{{- end }}
{{/* Define methods */}}

{{ end }}
{{ end }}