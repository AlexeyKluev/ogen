{{- /*gotype: github.com/ogen-go/ogen/internal/gen.config*/ -}}

{{ define "schemas" }}
{{ $pkg := $.Package }}
{{ template "header" $ }}

{{- range $name, $s := $.Schemas }}
{{/* Define schema structure */}}
{{- if eq $s.Kind "struct" }}
type {{ $name }} struct {
{{- range $f := $s.Fields }}
    {{ $f.Name }} {{ $f.Type }} `json:"{{ $f.Tag }}"`
{{- end }}
}
{{/* Define schema structure */}}

{{/* Define schema simple type */}}
{{- else }}
type {{ $name }} {{ $s.Type }}
{{- end }}
{{/* Define schema simple type */}}

{{/* Define impl methods */}}
{{- range $impl, $_ := $s.Implements }}
func (*{{ $name}}) {{ $impl }}() {}
{{- end }}
{{/* Define impl methods */}}

{{ end }}
{{ end }}