{{- /*gotype: github.com/ogen-go/ogen/internal/gen.config*/ -}}

{{ define "server" }}
    {{ $pkg := $.Package }}
    {{ template "header" $ }}

	type Server interface {
    {{- range $m := $.Server.Methods }}
		// {{ $m.Name }}
		{{- if ne $m.ResponseType "" }}
		{{ $m.Name }}(ctx context.Context{{- if $m.RequestType }}, req *{{$m.RequestType}}{{ end }}{{- if $m.Parameters }}, params *{{ $m.Name }}Parameters{{ end }}) (*{{ $m.ResponseType }}, error)
		{{- else }}
            {{ $m.Name }}(ctx context.Context) error
		{{- end }}
    {{- end }}
	}
{{ end }}