{{- /*gotype: github.com/ernado/ogen/internal/gen.config*/ -}}

{{ define "server" }}
    {{ $pkg := $.Package }}
    {{ template "header" $ }}

	type Server interface {
    {{- range $m := $.Server.Methods }}
		// {{ $m.Name }}
		{{- if ne $m.ResponseType "" }}
		{{ $m.Name }}(ctx context.Context{{- if ne $m.RequestType "" }}, req *{{$m.RequestType}}{{ end }}) (*{{ $m.ResponseType }}, error)
		{{ else }}
            {{ $m.Name }}(ctx context.Context) error
		{{ end }}
    {{- end }}
	}
{{ end }}