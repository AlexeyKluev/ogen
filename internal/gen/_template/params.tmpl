{{- /*gotype: github.com/ogen-go/ogen/internal/gen.TemplateConfig*/ -}}

{{ define "params" }}
{{ $pkg := $.Package }}
{{ template "header" $ }}

{{- range $m := $.Methods }}{{/* Range over methods */}}
{{ if $m.Parameters }}{{/* Check parameters existence */}}
type {{ $m.Name }}Params struct {
	{{- range $t, $params := $m.Parameters }}
		{{ $t }} {{ $m.Name }}{{ $t }}Params
	{{- end}}
}

{{ range $t, $params := $m.Parameters }}{{/* Range over method parameters */}}
type {{ $m.Name }}{{ $t }}Params struct {
	{{- range $p := $params }}
		{{ $p.Name }} {{ $p.Schema.Type }}
	{{- end }}
}
{{ end }}{{/* Range over method parameters */}}
{{ end }}{{/* Check parameters existence */}}
{{ end }}{{/* Range over methods */}}
{{ end }}